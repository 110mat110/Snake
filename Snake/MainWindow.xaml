<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="314*"/>
        </Grid.RowDefinitions>
        <Label x:Name="BestFitenss"  Content="BF: 100" Width="100" Margin="54,0,1338,0"/>
        <Label x:Name="Round"  Content="Round: 100" Width="100" Margin="159,0,1233,0"/>
        <ProgressBar x:Name="RoundProgress" Width="200" Margin="302,0,990,0"/>
        <Button Content="Start" Width="100" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click"/>
        <Canvas x:Name="GameCanvas" HorizontalAlignment="Left" VerticalAlignment="Top" Height="800" Width="1400" Grid.Row="1"/>
        <Canvas x:Name="neuralCanvas" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Width="200" Grid.Row="1"/>
    </Grid>
</Window>
